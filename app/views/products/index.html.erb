<h1>Listing products</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name th</th>
    <th>Name eng</th>
    <th>Price</th>
    <th>Description</th>
    <th>Product group</th>
    <th>Product cat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.code %></td>
    <td><%= product.name_th %></td>
    <td><%= product.name_eng %></td>
    <td><%= product.price %></td>
    <td><%= product.description %></td>
    <td><%= product.product_group_id %></td>
    <td><%= product.product_cat_id %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

